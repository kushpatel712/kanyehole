<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dropout.kanyehole.Leaderboard">

    <TextView android:text="Leaderboards"
        android:layout_width="wrap_content"
        android:textSize="50sp"
        android:textStyle="bold"
        android:id="@+id/leaderboard"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

    <TextView android:text="High Scores"
        android:layout_width="wrap_content"
        android:textSize="40sp"
        android:layout_below="@+id/leaderboard"
        android:textStyle="bold"
        android:id="@+id/song"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

    <TextView android:text="\n1: "
        android:layout_width="wrap_content"
        android:textSize="30sp"
        android:id="@+id/one"
        android:layout_below="@+id/song"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

    <TextView android:text="2: "
        android:layout_width="wrap_content"
        android:textSize="30sp"
        android:id="@+id/two"
        android:layout_below="@+id/one"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

    <TextView android:text="3: "
    android:layout_width="wrap_content"
    android:textSize="30sp"
    android:id="@+id/three"
    android:layout_below="@+id/two"
    android:textStyle="bold"
    android:layout_centerHorizontal="true"
    android:layout_height="wrap_content" />

    <TextView android:text="4: "
    android:layout_width="wrap_content"
    android:textSize="30sp"
    android:id="@+id/four"
    android:layout_below="@+id/three"
    android:textStyle="bold"
    android:layout_centerHorizontal="true"
    android:layout_height="wrap_content" />

    <TextView android:text="5: "
        android:layout_width="wrap_content"
        android:textSize="30sp"
        android:id="@+id/five"
        android:layout_below="@+id/four"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />



</RelativeLayout>
