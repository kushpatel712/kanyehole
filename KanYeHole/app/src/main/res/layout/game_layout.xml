<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bgsmall"
        android:configChanges="orientation|keyboardHidden|screenSize"

        android:id="@+id/rgame">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
                >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50dp"
                android:src="@drawable/arrowleft"
                android:layout_toLeftOf="@+id/down"
                android:id="@+id/left"
                android:background="#00000000"
                android:onClick="leftPressed"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/blank"
                android:layout_toStartOf="@+id/up"
                android:src="@drawable/arrowdown"
                android:id="@+id/down"
                android:background="#00000000"
                android:onClick="downPressed"
                android:paddingLeft="20dp"
                android:layout_marginBottom="50dp"
                />
            <TextView
                android:layout_width="20dp"
                android:layout_height="0dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="#00000000"

                android:layout_marginBottom="50dp"
                android:id="@+id/blank"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrowup"
                android:id="@+id/up"
                android:background="#00000000"
                android:onClick="upPressed"
                android:paddingRight="20dp"
                android:layout_gravity="bottom"
                android:layout_toRightOf="@+id/blank"
                android:layout_marginBottom="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrowright"
                android:id="@+id/right"
                android:background="#00000000"
                android:onClick="rightPressed"
                android:layout_toRightOf="@+id/up"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50dp"/>
          </RelativeLayout>
    <!---
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pausebutton"
        android:id="@+id/pause"
        android:background="#00000000"
        android:onClick="pause"
      />
    -->
</FrameLayout>
