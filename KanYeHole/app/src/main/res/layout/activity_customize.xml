<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dropout.kanyehole.Customize">

    <TextView
        android:id="@+id/kustomz"
        android:text="Kanye Kustomz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="50sp"
        android:textStyle="italic"
        />

    <Button
        android:id="@+id/back"
        android:text="prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:onClick="shiftImageBack"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:id="@+id/headimage"
        android:src="@drawable/kanyeheadmap"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"

        android:background="@android:color/transparent"

        />

    <Button android:text="next"
        android:layout_width="wrap_content"
        android:id="@+id/forward"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:onClick="shiftImageForward"/>
    <Button android:text="Play!"
        android:layout_width="wrap_content"
        android:id="@+id/play"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:onClick="sendPlay"/>
    <!--<RadioButton android:id="@+id/radio_pirates"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:text="Reverse rotation?"-->
        <!--android:onClick="toggle"/>-->

</RelativeLayout>
